<Window x:Class="AutoCarePro.AvilabletimeSlotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCarePro"
        mc:Ignorable="d"
        Title="AvilabletimeSlotes" Height="450" Width="800">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2"
                   FontSize="20" 
                   Padding="5"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Text="Availabal TimeSlotes"></TextBlock>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button FontSize="20"
                    VerticalAlignment="Center"
                    Padding="10"
                    Margin="5"
                    Background="Red"
                    Foreground="White"
                    Click="Add_Product">Add</Button>
            <Button FontSize="20"
                    Padding="10"
                    Margin="5"
                    Background="Red"
                    Foreground="White"
                    Click="Delete_Product">Delete</Button>
            <Button FontSize="20"
                    Padding="10"
                    Margin="5"
                    Background="Red"
                    Click="Add_Product"
                    Foreground="White">Update</Button>
        </StackPanel>

        <DataGrid AutoGenerateColumns="True"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  x:Name="ProductGrid"
                  Grid.RowSpan="2"
                  Grid.Row="1"
                  Grid.Column="0"
                  Background="Beige">
        </DataGrid>
    </Grid>





</Window>
