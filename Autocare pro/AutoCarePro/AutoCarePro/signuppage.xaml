<Window x:Class="AutoCarePro.signuppage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCarePro"
        mc:Ignorable="d"
        Title="signuppage" Height="450" Width="800">
    
        <Grid Margin="10">
            <!-- Title -->
            <TextBlock Text="Sign Up for AutoCare Pro" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="red" 
                   Margin="0,10,0,0"/>

            <!-- Instruction -->
            <TextBlock Text="Create your account to book services easily!" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="12" 
                   Foreground="Gray" 
                   Margin="0,40,0,0"/>

            <!-- Form Fields -->
            <StackPanel Margin="30,80,30,80">
                <TextBlock Text="Name:" FontSize="14" Margin="0,5,0,0"/>
                <TextBox Name="NameTextBox" Height="25" Margin="0,5,0,10"/>

                <TextBlock Text="Email:" FontSize="14" Margin="0,5,0,0"/>
                <TextBox Name="EmailTextBox" Height="25" Margin="0,5,0,10"/>

                <TextBlock Text="Contact Number:" FontSize="14" Margin="0,5,0,0"/>
                <TextBox Name="ContactNumberTextBox" Height="25" Margin="0,5,0,10"/>

                <TextBlock Text="Address:" FontSize="14" Margin="0,5,0,0"/>
                <TextBox Name="AddressTextBox" Height="25" Margin="0,5,0,10"/>

                <TextBlock Text="Create Username:" FontSize="14" Margin="0,5,0,0"/>
                <TextBox Name="UsernameTextBox" Height="25" Margin="0,5,0,10"/>

                <TextBlock Text="Create Password:" FontSize="14" Margin="0,5,0,0"/>
                <PasswordBox Name="PasswordBox" Height="25" Margin="0,5,0,10"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,20">
                <Button Content="Sign Up" 
                    Background="red" 
                    Foreground="White" 
                    Width="100" 
                    Height="30" 
                    Margin="5" 
                    Click="SignUpButton_Click"/>
                <Button Content="Back" 
                    Background="Gray" 
                    Foreground="White" 
                    Width="100" 
                    Height="30" 
                    Margin="5" 
                    Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
</Window>
